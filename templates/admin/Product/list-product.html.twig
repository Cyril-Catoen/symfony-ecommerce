{% extends 'admin/base.html.twig' %}

        {% block metatitle %}
        <title>List-product</title>
        {% endblock metatitle %}

{% block main %}

<main>

    <section id="article-order">

      <table>
          <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Prix</th>
            <th>Catégorie</th>
            <th>Date de création</th>
            <th>Date de modification</th>
            <th>Action</th>
          </tr>


        {% for product in products %} 

          <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.title }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.category.title }}</td>
            <td>{{ product.createdAt | date('d-m-Y') }}</td>
            <td>  
              {% if product.updatedAt %}
              {{ product.updatedAt | date('d-m-Y') }}
              {% else %}
                -
              {% endif %}
            </td>
            <td><a href="{{ path('admin/delete-product', { 'id': product.id }) }}">Supprimer</a></td>
          </tr>

        {% endfor %}

      </table>

	</section>

</main>
{% endblock main %}