{% extends 'guest/base.html.twig' %}

        {% block metatitle %}
        <title>Single-product</title>
        {% endblock metatitle %}

{% block main %}
<main>

    <section>
			<article style="background-color: grey">
				<h2>{{ product.title }}</h2>
				<p>{{ product.description }}</p>
				<p>Prix : {{ product.price }} euros</p>
              	<p>Créé le {{ product.createdAt | date()}}</p>
                <p>Modifié le {{ product.updatedAt | date()}}</p>
                <p>{{ product.isPublished}}</p>
			</article>
	</section>



</main>
{% endblock main %}
